<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleProProfilePic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="10dp"
            android:padding="10dp"
            android:src="@drawable/food_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <TextView
            android:id="@+id/tvProName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Shaikh Wasi Sadman"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/circleProProfilePic"
            app:layout_constraintTop_toTopOf="@+id/circleProProfilePic" />

        <TextView
            android:id="@+id/tvProContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+8801798266860"
            app:layout_constraintStart_toStartOf="@+id/tvProName"
            app:layout_constraintTop_toBottomOf="@+id/tvProName" />

        <TextView
            android:id="@+id/btnProfileEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_border_button"
            android:text="Edit"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/tvProContact"
            app:layout_constraintTop_toBottomOf="@+id/tvProContact" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Account"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleProProfilePic" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvProLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Location" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

                <TextView
                    android:id="@+id/tvProChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/eye"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Change Password" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

                <TextView
                    android:id="@+id/tvProShipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shipping"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Shipping" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

                <TextView
                    android:id="@+id/tvProPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/credit_card"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Payment" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="Notification"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView5" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:id="@+id/swProfNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/notification"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Notification" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

                <Switch
                    android:id="@+id/swProfLocationTracing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableLeft="@drawable/notification"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Location Tracking" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30000000" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Profile"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>